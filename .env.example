# Environment Variables for Morse Chat Backend

# Server Configuration
NODE_ENV=development
PORT=6969
HOST=localhost

# Supabase Configuration (If using Supabase)
SUPABASE_URL=YOUR-SUPABASE-URL
SUPABASE_ANON_KEY=YOUR-SUPABASE-ANON-KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR-SUPABASE-SERVICE-ROLE-KEY

DATABASE_URL=db_connection_string_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE_TIME=7d

# CORS Configuration
CORS_ORIGIN=CORS-ORIGIN-URL1,CORS-ORIGIN-URL2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug

# Redis (optional - for session storage)
REDIS_URL=redis://localhost:6379

# Cloudflare Turnstile (optional)
TURNSTILE_SITE_KEY=YOUR-CLOUDFLARE_TURNSTILE_SITE_KEY
TURNSTILE_SECRET_KEY=YOUR-CLOUDFLARE_TURNSTILE_SECRET_KEY

# Optional: CORS Configuration
CORS_ORIGINS=*